{
  "version": 2,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 22,
      "patch": 0
  },
  "configurePresets": [
    {
        "name": "CPack_Clang",
        "displayName": "CPack_Clang",
        "description": "CPack generates a interface library to be used by CMake with Clang for Embedded ARM",
        "generator": "Ninja",
        "environment": {
            "CORTEX_TYPE": "CM0",
            "LLVM_CLANG_ROOT_FOLDER": "/Users/sohal/toolchains/LLVMEmbeddedToolchainForArm-17.0.0-Darwin-AArch64",
            "SEGGER_JLINK_ROOT_FOLDER": "/Applications/SEGGER/JLink"
        },
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
            "FETCHCONTENT_UPDATES_DISCONNECTED": "OFF",
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
            "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/_deps/cmake-toolchains-src/llvm-clang-arm.cmake",
            "GITHUB_BRANCH_TOOLCHAIN": "HEAD"
        }
    }
    ],
    "buildPresets": [
    {
        "name": "CPack_Clang",
        "configurePreset": "CPack_Clang"
    }
    ]
}
